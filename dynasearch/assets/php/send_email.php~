<?php 

   //if( $POST_ )
   $recipient = $_POST['recipient'];
   $subject   = $_POST['subject'];
   $message   = $_POST['message'];
   $sender    = $_POST['sender'];
   $headers   = "From:" . $sender;
   if( mail($recipient, $subject, $message, $headers) )
   {
      echo "Success";
   }
   else
   {
      echo "Failed";
   }

?>
