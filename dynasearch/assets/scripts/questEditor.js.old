function deleteElem(y){
   for(x=0; x < totalElem; x++){
      if(elemId[x] == y){
	     frontR[x] = "";
		 elemId[x] = -2;
	  }
   }
   // If blank, create new arrays
   var empty = 0;
   for(x=0; x < totalElem; x++){
	   if( elemId[x] != -2 ){
	      empty = 1;
	   }
   }
   if( empty == 0 ){
	  
      frontR = new Array();
	  elemId = new Array();
	  sectionSet = 0;
	  totalQuestions = 0;
	  totalElem = 0;
	  elem = 0;
   }
   writeQuestionaire();
}


